<UserControl x:Class="SafeBySimplify.RecordViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SafeBySimplify"
             xmlns:safeViewModel="clr-namespace:SafeViewModel;assembly=SafeViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance safeViewModel:RecordViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>        
        <Label Content="{Binding Name}" Style="{StaticResource Level2HeadingLableStyle}"/>
        <TextBlock Grid.Row="1" Text="Tags"/>
        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="{StaticResource NormalElementSpacingMargin}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid ItemsSource="{Binding PasswordRecords}" 
                              AutoGenerateColumns="False"
                              Margin="{StaticResource NormalElementSpacingMargin}" 
                              HeadersVisibility="None"  ColumnWidth="SizeToCells"
                              HorizontalAlignment="Center">
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Name"  MinWidth="100" Binding="{Binding Name}"/>
                            <DataGridTextColumn  Header="Image" MinWidth="100"  Binding="{Binding Value}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FileRecords}" Margin="{StaticResource NormalElementSpacingMargin}" HeadersVisibility="None"
                              HorizontalAlignment="Center"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Image" Width="Auto" MinWidth="100" Binding="{Binding Name}"/>
                            <DataGridTemplateColumn  Header="Image" MinWidth="30" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DownloadCommand}" Content="Download" MinWidth="50"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="Image" MinWidth="30" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding UploadCommand}" Content="Download" MinWidth="50"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
            <StackPanel Grid.Column="1" Width="60" Orientation="Vertical">
                <Button Command="{Binding SaveCommand}" Content="Save"/>
                <Button Command="{Binding DiscardChangesCommand}" Content="Discard"/>
                <Button Command="{Binding DeleteCommand}" Content="Delete"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
